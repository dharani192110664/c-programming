#include<stdio.h>


int main(){
	int lim, m, n, o;
	char special = '#';
	
	
	printf("enter the limit:");
	scanf("%d",&lim);
	if(lim<=0 || lim==special){
		printf("invalid limit");
	}
	if(lim==float(1.5)){
		printf("invalid limit");
	}
	
	for(m=1;m<=lim;m++){
		for(n=1;n<=lim;n++){
			for(o=1;o<=lim;o++){
				if(m*m + n*n == o*o){
					printf("pythagorean triplets are %d,%d,%d\n",m,n,o);
				}
				
		}
	}
}
return
